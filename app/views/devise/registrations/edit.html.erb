<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= image_tag(resource.avatar_thumbnail) if resource.avatar.attached? %>
  </div> 

  <div class="field">
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%#= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.password_field :password,placeholder: "Here you can change your password. #{@minimum_password_length} characters minimum", autocomplete: "new-password" %>
  <%#  <% if @minimum_password_length %>
      
  <%#    <em><%= @minimum_password_length %><%# characters minimum</em>
  <%#   <% end %>
  </div>


  <div class="field">
    <%#= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <%#################################################################################%>

    <%#<div class="field">
      <%#= f.label :username %>
    <%#  <%= f.text_field :username, autocomplete: "username" %>
  <%#  </div> %>
    <% if current_user.role == 'master'%>
    <div class="field">
      <%= f.text_area :about %>
    </div>
    <div class="field">
      <%= f.number_field :work_exp %>
    </div>
    <% end %>


    <div class="field">
      <%#= f.label :last_name %>
      <%= f.text_field :last_name, autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%#= f.label :first_name %>
      <%= f.text_field :first_name, autocomplete: "first_name" %>
    </div>

    <div class="field">
     <%#= f.label :phone_numb %>
      <%= f.number_field :phone_numb, autocomplete: "phone_number" %>
    </div>


<%#################################################################################%>


  <div class="field">
    <%#= f.label :current_password %>
    <%= f.password_field :current_password,placeholder: "We need your current password to confirm your changes", autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

